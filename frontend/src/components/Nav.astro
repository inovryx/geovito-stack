---
import { translate } from '../lib/uiLanguage';
import Icon from './Icon.astro';

interface Props {
  currentLanguage: string;
  ui: Record<string, unknown>;
}

const { currentLanguage, ui } = Astro.props;
const base = `/${currentLanguage}`;
const t = (key: string, fallback: string) => translate(ui, key, {}, fallback);
const links = [
  { key: 'home', icon: 'House', path: '', fallback: 'Home' },
  { key: 'atlas', icon: 'MapPinned', path: 'atlas', fallback: 'Atlas' },
  { key: 'regions', icon: 'Layers', path: 'regions', fallback: 'Regions' },
  { key: 'blog', icon: 'Newspaper', path: 'blog', fallback: 'Blog' },
  { key: 'about', icon: 'Info', path: 'about', fallback: 'About' },
  { key: 'rules', icon: 'ScrollText', path: 'rules', fallback: 'Rules' },
  { key: 'help', icon: 'CircleHelp', path: 'help', fallback: 'Help' },
];
---

<nav aria-label={t('layout.mainNavigation', 'Main navigation')} class="app-nav">
  <ul class="app-nav-list">
    {
      links.map((entry) => (
        <li>
          <a class="app-nav-link" href={entry.path ? `${base}/${entry.path}/` : `${base}/`}>
            <Icon name={entry.icon} size={20} />
            <span class="truncate">{t(`nav.${entry.key}`, entry.fallback)}</span>
          </a>
        </li>
      ))
    }
  </ul>
</nav>
