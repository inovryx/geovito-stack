---
import Icon from '../Icon.astro';

interface Props {
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  variant?: 'primary' | 'secondary' | 'ghost' | 'danger';
  size?: 'sm' | 'md' | 'lg';
  disabled?: boolean;
  loading?: boolean;
  class?: string;
  ariaLabel?: string;
}

const {
  href,
  type = 'button',
  variant = 'primary',
  size = 'md',
  disabled = false,
  loading = false,
  class: className = '',
  ariaLabel,
} = Astro.props as Props;

const isDisabled = disabled || loading;
const variantClasses = {
  primary: 'bg-accent text-white border-accent hover:bg-accent2 hover:border-accent2',
  secondary: 'bg-surface text-fg border-border hover:bg-surface2 hover:border-accent',
  ghost: 'bg-transparent text-fg border-transparent hover:bg-surface2 hover:border-border',
  danger: 'bg-danger/15 text-danger border-danger/45 hover:bg-danger/20',
} as const;
const classes = [
  'ui-button',
  `ui-button-${variant}`,
  `ui-button-${size}`,
  'rounded-sm',
  variantClasses[variant],
  isDisabled ? 'is-disabled' : '',
  loading ? 'is-loading' : '',
  className,
]
  .filter(Boolean)
  .join(' ');
---

{
  href ? (
    <a href={isDisabled ? undefined : href} class={classes} aria-disabled={isDisabled ? 'true' : undefined}>
      {loading ? <Icon name="LoaderCircle" size={16} class="spin" /> : null}
      <span class="ui-button-label truncate"><slot /></span>
    </a>
  ) : (
    <button type={type} class={classes} disabled={isDisabled} aria-label={ariaLabel} aria-busy={loading ? 'true' : 'false'}>
      {loading ? <Icon name="LoaderCircle" size={16} class="spin" /> : null}
      <span class="ui-button-label truncate"><slot /></span>
    </button>
  )
}
