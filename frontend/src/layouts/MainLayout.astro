---
import AppShell from './AppShell.astro';

interface AlternateLink {
  hreflang: string;
  href: string;
}

interface Props {
  title: string;
  description?: string;
  canonical: string;
  robots?: string;
  currentLanguage: string;
  languageLinks: Record<string, string>;
  alternates?: AlternateLink[];
  ui: Record<string, unknown>;
  showTools?: boolean;
  toolsContext?: string | null;
}

const {
  title,
  description = 'Geovito Atlas frontend on top of Strapi.',
  canonical,
  robots = 'index,follow',
  currentLanguage,
  languageLinks,
  alternates = [],
  ui,
  showTools = false,
  toolsContext = null,
} = Astro.props as Props;
---

<AppShell
  title={title}
  description={description}
  canonical={canonical}
  robots={robots}
  currentLanguage={currentLanguage}
  languageLinks={languageLinks}
  alternates={alternates}
  ui={ui}
  showTools={showTools}
  toolsContext={toolsContext}
>
  <slot />
  <slot name="tools" slot="tools" />
</AppShell>
