{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://geovito.com/search/contracts/blog-document.v1.schema.json",
  "title": "Blog Search Document v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "domain",
    "document_id",
    "post_id",
    "language",
    "canonical_language",
    "title",
    "slug",
    "url",
    "is_indexable"
  ],
  "properties": {
    "domain": { "type": "string", "const": "blog" },
    "document_id": { "type": "string" },
    "post_id": { "type": "string" },
    "language": { "type": "string" },
    "canonical_language": { "type": "string" },
    "title": { "type": "string" },
    "slug": { "type": "string" },
    "excerpt": { "type": ["string", "null"] },
    "url": { "type": "string" },
    "related_place_ids": {
      "type": "array",
      "items": { "type": "string" }
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "is_indexable": { "type": "boolean" },
    "updated_at": { "type": "string", "format": "date-time" }
  }
}
