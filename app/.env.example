# PROD-FIRST repository baseline
# This repo runs production-safe defaults from day 1.
# Mock data is manual and guarded.
# AI provider hookup is NOT in scope yet (only infra flags exist).

# Environment
NODE_ENV=production
LOG_LEVEL=info

# Server
# Use 0.0.0.0 inside containers if other services must reach Strapi.
# Keep host exposure private with docker port binding on 127.0.0.1.
HOST=127.0.0.1
PORT=1337

# Secrets (generate strong values for production)
APP_KEYS="replace,with,real,keys"
API_TOKEN_SALT=replace_with_real_value
ADMIN_JWT_SECRET=replace_with_real_value
TRANSFER_TOKEN_SALT=replace_with_real_value
JWT_SECRET=replace_with_real_value
ENCRYPTION_KEY=replace_with_real_value

# Rate limiting
RATE_LIMIT_INTERVAL=60000
RATE_LIMIT_MAX=100

# Database (Postgres example)
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=change_me
DATABASE_SSL=false
DATABASE_SCHEMA=public
DATABASE_URL=

# SQLite (local dev alternative)
DATABASE_FILENAME=.tmp/data.db

# Bootstrap seeding (explicit opt-in only)
SEED_ON_BOOT=false
SEED_MOCK_ON_BOOT=false
ALLOW_MOCK_SEED=false
IMPORT_ENABLED=false
TRANSLATION_BUNDLE_ENABLED=false

# Domain logging root (default is ../logs)
DOMAIN_LOG_ROOT=../logs

# AI layer (all disabled by default)
# Provider/model wiring will be added later.
AI_ENABLED=false
AI_DIAGNOSTICS_ENABLED=false
AI_DRAFT_ENABLED=false
AI_AUTHOR_LANGUAGES=en,de,es,ru,zh-cn
