{
  "kind": "collectionType",
  "collectionName": "country_profiles",
  "info": {
    "singularName": "country-profile",
    "pluralName": "country-profiles",
    "displayName": "Country Profile",
    "description": "Country-specific Atlas hierarchy, labels and validation rules"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "country_code": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 2,
      "maxLength": 2
    },
    "enabled_levels": {
      "type": "json",
      "description": "Ordered enabled place types for this country (for editorial forms and validation).",
      "required": true
    },
    "label_mapping": {
      "type": "json",
      "description": "UI labels per place type (example: admin1=State for US, admin1=Il for TR)."
    },
    "level_labels": {
      "type": "json",
      "description": "Compatibility mirror of label_mapping."
    },
    "parent_rules": {
      "type": "json",
      "description": "Allowed parent types for each child place type."
    },
    "city_like_levels": {
      "type": "json",
      "description": "Place types considered city-class for region/trending widgets."
    },
    "region_auto_assign": {
      "type": "json",
      "description": "Optional region auto-assign maps (by_place_id/by_slug/by_admin1_place_id/by_admin1_slug)."
    },
    "notes": {
      "type": "text",
      "description": "Editorial notes for operators."
    },
    "mock": {
      "type": "boolean",
      "default": false
    },
    "places": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::atlas-place.atlas-place",
      "mappedBy": "country_profile"
    }
  }
}
