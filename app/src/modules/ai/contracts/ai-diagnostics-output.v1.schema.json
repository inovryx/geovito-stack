{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ai-diagnostics-output.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["confidence", "root_causes", "evidence", "steps", "risk_level", "rollback"],
  "properties": {
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "root_causes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 3,
        "maxLength": 500
      }
    },
    "evidence": {
      "type": "array",
      "minItems": 0,
      "maxItems": 20,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["domain", "event", "request_id", "line_ref", "message"],
        "properties": {
          "domain": {
            "type": "string",
            "enum": ["atlas", "blog", "ui", "search", "suggestions", "ops", "import", "ai"]
          },
          "event": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "request_id": {
            "type": ["string", "null"],
            "maxLength": 128
          },
          "line_ref": {
            "type": "string",
            "minLength": 1,
            "maxLength": 300
          },
          "message": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1000
          },
          "ts": {
            "type": "string",
            "maxLength": 64
          }
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "string",
        "minLength": 3,
        "maxLength": 500
      }
    },
    "risk_level": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "rollback": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "string",
        "minLength": 3,
        "maxLength": 500
      }
    }
  }
}
