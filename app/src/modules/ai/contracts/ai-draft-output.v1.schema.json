{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ai-draft-output.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["title", "outline", "body_markdown", "internal_links", "disclaimer"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 180
    },
    "outline": {
      "type": "array",
      "minItems": 2,
      "maxItems": 12,
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 240
      }
    },
    "body_markdown": {
      "type": "string",
      "minLength": 20,
      "maxLength": 20000
    },
    "seo": {
      "type": "object",
      "additionalProperties": false,
      "required": ["meta_title", "meta_description"],
      "properties": {
        "meta_title": {
          "type": "string",
          "minLength": 3,
          "maxLength": 180
        },
        "meta_description": {
          "type": "string",
          "minLength": 3,
          "maxLength": 320
        }
      }
    },
    "internal_links": {
      "type": "array",
      "maxItems": 20,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9][a-z0-9._:-]*$",
        "maxLength": 120
      }
    },
    "disclaimer": {
      "type": "string",
      "minLength": 10,
      "maxLength": 240
    }
  }
}
